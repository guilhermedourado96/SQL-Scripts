CREATE FUNCTION fnConverteSegEmTempoTotal (@TOTAL_SEGUNDOS INT)
RETURNS VARCHAR(20)
AS
BEGIN
    DECLARE @HORAS INT, @MINUTOS INT, @SEGUNDOS INT, @TEMPO_TOTAL VARCHAR(20)

    SET @HORAS = @TOTAL_SEGUNDOS / 3600
    SET @MINUTOS = (@TOTAL_SEGUNDOS  % 3600) / 60
    SET @SEGUNDOS = @TOTAL_SEGUNDOS  % 60

    SET @TEMPO_TOTAL = CONCAT(@HORAS, 'H ', @MINUTOS, 'M ', @SEGUNDOS, 'S')

    RETURN @TEMPO_TOTAL
END
